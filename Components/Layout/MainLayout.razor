@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <AuthorizeView>
                <Authorized Context="authContext">
                    <span class="me-3">Hello, @authContext.User.Identity?.Name!</span>
                    <a href="/Auth/SignOut" class="btn btn-outline-primary btn-sm">Sign Out</a>
                </Authorized>
                <NotAuthorized>
                    <a href="/Auth/SignIn" class="btn btn-primary btn-sm">Sign In</a>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
